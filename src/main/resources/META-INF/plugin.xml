<idea-plugin require-restart="true">
    <id>ee.vstepa.jetbrains.plugins.renpy</id>
    <name>Ren'Py Language</name>
    <version>0.0.2-252</version>

    <vendor
            url="https://github.com/vstepa"
            email="vstepa.vs@gmail.com">
        vstepa
    </vendor>

    <description><![CDATA[
        <style>
            .wip {
                color: red;
                font-weight: bold; /* optional, to make it stand out */
            }
        </style>

        <p>
            Ren'Py (or RenPy) Visual Novel Engine support.
        </p>
        <div>
            <p>
                Features:
            </p>
            <ul>
                <li><span class="wip">[WORK IN PROGRESS]</span> Syntax highlighting</li>
                <li><span class="wip">[WORK IN PROGRESS]</span> Code completion</li>
                <li><span class="wip">[WORK IN PROGRESS]</span> Snippets</li>
            </ul>
        </div>
    ]]></description>

    <change-notes><![CDATA[
        <style>
            li.main {
                list-style-type: none;
            }
        </style>

        <h1>Changelog</h1>
        <hr>
        <h2>Legend</h2>
        <ul>
            <li class="main"><code>[+]</code> - something was added</li>
            <li class="main"><code>[-]</code> - something was removed</li>
            <li class="main"><code>[*]</code> - something was fixed</li>
            <li class="main"><code>[!]</code> - important note</li>
        </ul>
        <!--<hr>-->
        <!--<h2>0.0.3</h2>-->
        <!--<ul>-->
        <!--    <li class="main">...</li>-->
        <!--</ul>-->
        <!--<hr>-->
        <h2>0.0.2-252</h2>
        <h3>First publication preparations</h3>
        <ul>
            <li class="main"><code>[*]</code> Changed plugin title from "Ren'Py Support" to "Ren'Py Language", because using "Support" word is not recommended by JetBrains guidelines</li>
            <li class="main"><code>[*]</code> Added project license - MIT</li>
            <li class="main"><code>[*]</code> Removed all deprecated and unnecessary files from the build</li>
        </ul>
        <hr>
        <h2>0.0.1-252</h2>
        <h3>Functional</h3>
        <ul>
            <li class="main"><code>[+]</code> Added "Ren'Py Script" (*.rpy files) and "Ren'Py Compiled Script" (*.rpyc files) file types</li>
            <li class="main"><code>[+]</code> Added basic lexer and parser for "Ren'Py Script" language, which can parse some most common statements</li>
        </ul>
        <h3>UI</h3>
        <ul>
            <li class="main"><code>[+]</code> Updated plugin logo from default to Ren'Py logo</li>
            <li class="main"><code>[+]</code> Added icons for "Ren'Py Script" and "Ren'Py Compiled Script" file types</li>
            <li class="main"><code>[+]</code> Added editor colors to different "Ren'Py Script" language elements (keywords, comments, identifiers, etc.)</li>
            <li class="main"><code>[+]</code> Added color schema files and color schemas registrations for "Ren'Py Script" language Darcula and Default color themes</li>
        </ul>
        <h3>Syntax highlighting</h3>
        <ul>
            <li class="main"><code>[+]</code> Syntax errors are highlighted with underlying if such errors encountered during parsing</li>
        </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Ren'Py Script File"
                implementationClass="ee.vstepa.jetbrains.plugins.renpy.filetype.RenPyScriptFileType"
                fieldName="INSTANCE"
                language="Ren'Py Script"
                extensions="rpy"
        />
        <fileType
                name="Ren'Py Compiled Script File"
                implementationClass="ee.vstepa.jetbrains.plugins.renpy.filetype.RenPyCompiledScriptFileType"
                fieldName="INSTANCE"
                language="Ren'Py Script"
                extensions="rpyc"
        />

        <applicationService
                serviceInterface="ee.vstepa.jetbrains.plugins.renpy.lang.script.RenPyScriptElementFactory"
                serviceImplementation="ee.vstepa.jetbrains.plugins.renpy.lang.script.RenPyScriptElementFactoryImpl"
        />

        <lang.parserDefinition
                language="Ren'Py Script"
                implementationClass="ee.vstepa.jetbrains.plugins.renpy.lang.script.RenPyScriptParserDefinition"
        />

        <lang.syntaxHighlighterFactory
                language="Ren'Py Script"
                implementationClass="ee.vstepa.jetbrains.plugins.renpy.lang.script.RenPyScriptSyntaxHighlighterFactory"
        />

        <additionalTextAttributes
                scheme="Default"
                file="ee/vstepa/jetbrains/plugins/renpy/colorSchemes/RenPyScriptDefault.icls"
        />
        <additionalTextAttributes
                scheme="Darcula"
                file="ee/vstepa/jetbrains/plugins/renpy/colorSchemes/RenPyScriptDarcula.icls"
        />
    </extensions>
</idea-plugin>
